@using System.Web.Optimization

<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="utf-8">
     <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
     <title>Chat Flow</title>

     @Styles.Render("~/assets/vendors")

     <style>
       .sidebar-brand-wrapper > .sidebar-brand-name > span{
               transition : .2s;
               transition-property : transform;
          }

            .sidebar-brand-wrapper > .sidebar-brand-name:hover{
               text-decoration : none;
          }  

          .sidebar-brand-wrapper > .sidebar-brand-name > span:hover{
               transition : .2s;
               transition-property : transform;
               transform : translateY(-7px);
          }   
          
          .sidebar-icon-only .sidebar-brand-name > span:not(:is(:last-child, :first-child)){
               font-size : 0;
s               width : 0;
               height : 0;
          }

          .login--form {
               background : red;
          }
     </style>
</head>
     <body>
          <div class="container-scroller">
               @Html.Partial("_Sidebar")
               <div class="container-fluid page-body-wrapper">
                    @Html.Partial("_Navbar")
                    <div class="main-panel">
                         <div class="content-wrapper">
                              @RenderBody()
                         </div>
                         <footer class="footer">
                              @Html.Partial("_Footer")
                         </footer>
                    </div>
               </div>
          </div>
          @Scripts.Render("~/assets/js") 
          @*<script src="~/assets/vendors/js/vendor.bundle.base.js"></script>*@
          @*<script src="~/assets/js/off-canvas.js"></script>*@
          @*<script src="~/assets/js/hoverable-collapse.js"></script>*@
          @*<script src="~/assets/js/misc.js"></script>*@
          @*<script src="~/assets/js/settings.js"></script>*@
          @*<script src="~/assets/js/todolist.js"></script>*@
     </body>
</html>